doctype html
html
  head
    title Users List
  body
    .container
      h1 User List
      table.table.table-striped
        thead
          tr
            th Username
            th Email
            th View
        tbody
          each user in users
            tr
              td #{user.username}
              td #{user.email}
              td
                a.bth.bth-primary(href=`/users/${user.id}`)
