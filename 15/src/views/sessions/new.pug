extends ../layout/page.pug

block content
  h1 Логин

  if error
    p(style="color: red") #{error}

  form(action="/sessions" method="post")
    div
      label Имя пользователя
        input(type="text" name="username")
    div
      label Пароль
        input(type="password" name="password")
    div
      input(type="submit" value="Войти")
